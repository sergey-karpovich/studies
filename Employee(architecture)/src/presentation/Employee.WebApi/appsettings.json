{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Error",
        "Microsoft": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp} [{Level}] - Message: {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "ConnectionString": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=my-book-db;Integrated Security=True;Pooling=False",
          "TableName": "Logs"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "EmployeeAPICon": "Server=.;Database=NewEmployeeDB;Integrated Security=True;Pooling=False;Encrypt=False;"
  },
  "Jwt": {
    "Issuer": "EmployeeAPI",
    "lifetime": 15,
    "Key": "This is a sample secret key - please don't use in production environment.'"
  }
}
