@using Company.Models   
@model WorkTime
   
        <form asp-action="Edit" method="post" >            
            
            <div class="row">
                <div class="form-group">
                    <label asp-for="numMonth"></label>
                    <input asp-for="numMonth" class="form-control" />
                </div>    
                <div class="form-group">
                    <label asp-for="hours"></label>
                    <input asp-for="hours" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="lastRate"></label>
                    <input asp-for="lastRate" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="EmployeeId"></label>
                    <input asp-for="EmployeeId" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="money"></label>
                    <input asp-for="money" class="form-control" />
                </div>    
                
                
            </div>    
            <div class="row">
                <div class="col text-center m-1">
                    <button class="btn btn-sm btn-danger" type="submit">
                        Save</button>
                    <a class="btn btn-sm btn-secondary" asp-action="Index">
                        Cancel</a>
                </div>
            </div>
        </form>
