@page
@model NorthwindWeb.Pages.SuppliersModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="row">
  <h1 class="display-2">Suppliers</h1>
  <table class="table">
    <thead class="thead-inverse">
      <tr><th>Company Name</th></tr>
    </thead>
    <tbody>
    @foreach(string name in Model.Suppliers)
    {
      <tr>
        <td>@name</td>
      </tr>
    }    
    </tbody>
  </table>
</div>
    <div class="row">
      <p>Enter a name for a new supplier:</p>
      <form method="POST">
        <div>Company Name<input asp-for="Supplier.CompanyName"/></div>
        <div>Country<input asp-for="Supplier.Country"/></div>
        <div>Phone<input asp-for="Supplier.Phone"/></div>
        <input type="submit"/>
      </form>
    </div>