@model IEnumerable<WorkTime>
@{

    Layout="_Layout";
}
<form asp-action="Update" method="post" >
    @foreach (WorkTime p in Model)
    /////////
    {
        <div class="row">
            <input type="hidden" name="p.Id" value="@p.Id" />
            <div class="col">
                <input name="p.numMonth" value="@p.numMonth" class="form-control" />
            </div>
            <div class="col">
                <input name="p.hours" value="@p.hours" class="form-control" />
            </div>
            <div class="col">
                <input name="p.lastRate" value="@p.lastRate" class="form-control" />
            </div>
            <div class="col">
                <input name="p.EmployeeId" value="@p.EmployeeId" class="form-control" />
            </div>
            
        </div>
    }
    <div class="row">
        <div class="col text-center m-1">
            <button class="btn btn-sm btn-danger" type="submit">
                Save</button>
            <a class="btn btn-sm btn-secondary" asp-action="Index">
                Cancel</a>
        </div>
    </div>
</form>
